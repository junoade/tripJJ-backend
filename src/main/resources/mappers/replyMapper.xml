<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trip.qna.dao.ReplyDao">

	<!-- 질문 등록  -->
	<insert id="registerReply" parameterType="Reply">
		INSERT INTO board_qna(userId, title, content)
        VALUES(#{userId}, #{title}, #{content})
	</insert>
    
    <select id="listReply" resultType="Reply" >
    	SELECT * FROM reply
    </select>
    
    <select id="getReply" parameterType="int" resultType="Reply">
    	SELECT *
    	FROM reply
    	WHERE replyNo = #{replyNo}
    </select>
    
    <update id="modifyReply" parameterType="Reply">
    	UPDATE reply
        SET comment = #{comment}
        WHERE replyNo = #{replyNo}
    </update>
    
    <delete id="deleteReply" parameterType="int">
    	DELETE FROM reply
    	WHERE replyNo = #{replyNo};
    </delete>
    
</mapper>